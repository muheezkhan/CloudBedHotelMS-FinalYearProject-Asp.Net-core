@model HotelCloudBedSystem.Areas.Admin.ViewModels.AdminProfileViewModel

@{
    Layout = null;
}




<div class="user-panel">
    <div class="pull-left image">
        @if (Model.AvatarImage == null)
        {

            <img  src="~/img/authors/2.jpg"  style="border-radius: 50%;" alt="woman avatar">
        }
        else
        {
            var base64 = Convert.ToBase64String(Model.AvatarImage);
            var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

            <img src='@imgsrc' class="img-circle" alt="User Image">
            @*<img id="adminpicture" src='@imgsrc' alt="woman avatar">*@
        }
    </div>
    <div class="pull-left info" style="margin-top:-8px;">
        <p style="color:black;">@Model.FirstName @Model.LastName</p>
        <p style="color:grey">@Model.Email</p>
        <p style="color:grey"><b>Admin</b></p>
    </div>
</div>