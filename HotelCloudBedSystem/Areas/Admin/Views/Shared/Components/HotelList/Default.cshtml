@model IEnumerable<HotelCloudBedSystem.Areas.Admin.ViewModels.HotelListViewModel>


@{
    ViewData["Title"] = "Index";
}




<section class="content-header">
    <h1>
        HotelList
        <small>Summary</small>
    </h1>
</section>

<div class="box-body" id="ManagerUser">
    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
        <div class="row">
            <div class="col-sm-12">
                @if (Model == null)
                {
                    <div class="alert alert-warning">
                        Empty Data Found..
                    </div>
                }
                else
                {
                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info" style="margin-top:25px;">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 150px;">Hotel Name</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 180px;">Hotel City</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 130px;">No of Floors</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 130px;">No of Rooms</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 130px;">Manager</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var hotel in Model)
                            {

                            <tr role="row" class="odd">
                                <td class="sorting_1">@hotel.HotelName</td>
                                <td>@hotel.HotelCity</td>
                                <td>@hotel.NoOfFloors</td>
                                <td>@hotel.NoOfRooms</td>
                                <td>@hotel.Manager</td>



                            </tr>
                            }



                        </tbody>

                    </table>

                    <a class="btn btn-primary js-userroledetail" style="margin-left:935px;" asp-area="Admin" asp-controller="Hotel" asp-action="Index">
                        Explore  <i class="fa fa-arrow-circle-right"></i>
                    </a>
                }

            </div>
        </div>
    </div>
</div>



