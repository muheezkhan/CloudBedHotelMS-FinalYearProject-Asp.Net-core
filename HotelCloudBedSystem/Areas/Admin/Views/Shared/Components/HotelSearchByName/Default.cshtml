
@model HotelCloudBedSystem.Areas.Admin.ViewModels.HotelSearchedByNameViewModel
@{
    Layout = null;
}




<div class="m-1 p-2" style="margin-top:-33px;margin-left:700px;">
    <form asp-area="Admin" asp-controller="Hotel" asp-action="Index" method="get" class="form-inline">
