
@model HotelCloudBedSystem.Areas.Manager.ViewModels.FloorCreateViewModel
@{
    Layout = null;
}


<div class="modal-dialog" id="HotelAddModel" style="width:500px;">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#17a2b8">
            <h5 class="modal-title" style="color:white">Add New<small>Floors</small></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body" id="UserAddForm">
            <form asp-area="Manager" asp-controller="HotelFloors" asp-action="Update"
                  method="post" class="FormCreate">
                @Html.HiddenFor(model => model.HotelFloorsId)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger small text-uppercase" })
                <div class="form-group">
                    <label asp-for="FloorName"></label>
                    <input asp-for="FloorName" class="form-control" />
                    <span asp-validation-for="FloorName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoOfRooms"></label>
                    <input asp-for="NoOfRooms" class="form-control" />
                    <span asp-validation-for="NoOfRooms" class="text-danger"></span>
                </div>



                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>


            </form>
        </div>
    </div>
</div>

<div class="modal" id="UseraddingModal">

</div>


