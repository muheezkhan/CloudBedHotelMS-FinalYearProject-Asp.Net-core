@model HotelCloudBedSystem.Areas.User.ViewModels.UserReservationViewModel
@{
    ViewData["Title"] = "UserReservation detail";
}


<div>
    <h2 style="margin-top: 0px;margin-left: 50px;">
        <i class="fa fa-list" aria-hidden="true" style="color:#922B21"></i>
        <b style="margin-left: 3px;color:#D4AC0D"> Reservation Detail</b>
    </h2>
    <hr style="margin-top: 0rem;">
</div>

<div class="card shadow-sm mt-4" style="width: 830px;margin-left:30px;" id="boxshadow">
    @if (Model.RoomImage == null)
    {

        <img src="~/dist/img/hotel.jpg" class="card-img-top" style="height:240px" alt="woman avatar">
    }
    else
    {
        var base64 = Convert.ToBase64String(Model.RoomImage);
        var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

        <img src='@imgsrc' class="card-img-top" style="height:240px" alt="User Image">
    }
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-md-6">
                        <p><i class="fa fa-hotel" style="color:#922B21"></i><span style="color:#D4AC0D"><strong> @Model.RoomName</strong></span></p>
                    </div>
                    <div class="col-md-6" style="margin-left:0px">
                        <p><i class="fa fa-bullseye" style="color:#922B21"></i><span style="color:green"><strong>Res_Id @Model.ReservationId</strong></span></p>
                    </div>
                </div>
                <h6><strong style="color:dimgray"><i class="fa fa-home" style="color:dimgray"></i> @Model.HotelName</strong></h6>
            </div>
            <div style="background-color:lightgray;width:1px;height:200px;margin-left:-20px"></div>
            <div class="col-6">
                @await Component.InvokeAsync("HotelCloudBedSystem.ViewComponents.RoomFacility", new { id = Model.RoomId })

            </div>
        </div>


        <strong style="color:#02598f">
            Room Images
        </strong>
        <br />
        @await Component.InvokeAsync("HotelCloudBedSystem.ViewComponents.HotelRoomImages", new { id = Model.RoomId })
    </div>
</div>