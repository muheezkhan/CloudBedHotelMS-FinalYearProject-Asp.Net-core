@model IEnumerable<HotelCloudBedSystem.ViewModels.HotelReviewViewModel>


@if (Model.Count() == 0)
{
   <div class="alert alert-warning">
       No Review found!
   </div>
}
else
{
    foreach(var review in Model)
    {
<div class="row" style="margin-top:15px;margin-left:20px">
    <img src="~/image/aa.png" style="width:60px;height:60px" />
    <strong style="margin-top:16px;margin-left:10px">
        @review.UserName
    </strong>
</div>

<strong style="color:peru;margin-left:100px">

    @for (int i = 0; i < review.ReviewStar; i++)
    {
        <i class="fa fa-star"></i>
    }
<span style="color:#A93226">
    @review.ReviewStar
</span>
   
</strong>

        <p style="color:gray;margin-left:20px" >
            @review.Review
        </p>
        <hr />
    }
}