@model IEnumerable<HotelCloudBedSystem.Areas.Manager.ViewModels.HotelRoomImagesViewModel>


@{
    ViewData["Title"] = "HotelImages";
}


@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        No Image Found
    </div>
}
else
{

    @foreach (var image in Model)
    {


        @if (image.HotelRoomimage == null)
        {

            <img src="~/dist/img/hotel.jpg" class="card-img-top" style="height:120px;margin-left:20px;width:160px" alt="woman avatar">
        }
        else
        {
            var base64 = Convert.ToBase64String(image.HotelRoomimage);
            var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

            <img src='@imgsrc' class="card-img-top" style="height:120px;margin-left:20px;margin-top:40px;width:160px" alt="User Image">
        }
       

    }

  
        
    }
