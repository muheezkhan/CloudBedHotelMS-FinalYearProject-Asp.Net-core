@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

    <ul class="navbar-nav">

        @if ((User.Identity.IsAuthenticated && User.IsInRole("Admin")))
        {
            <li class="nav-item">
                <a class="nav-link"  asp-area="Admin" asp-controller="Home" asp-action="Index" title="Manage">Hello @User.Identity.Name! (Admin)</a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link">
                            <strong style="color:#922B21">
                           <i class="fa fa-sign-out"></i> <span style="color:#D4AC0D">Logout</span></strong> 
                        </button>
                    </form>
                </li>
                }

                @if ((User.Identity.IsAuthenticated && User.IsInRole("User")))
                {
                    <li class="nav-item">
                        <a class="nav-link"  asp-area="User" asp-controller="Home" asp-action="Index" title="Manage">Hello @User.Identity.Name!</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link ">
                                <strong style="color:#922B21">
                                    <i class="fa fa-sign-out"></i> <span style="color:#D4AC0D">Logout</span>
                                </strong>
                            </button>
                        </form>
                    </li>
                }


                @if ((User.Identity.IsAuthenticated && User.IsInRole("Manager")))
                {
                    <li class="nav-item">
                        <a class="nav-link "  asp-area="Manager" asp-controller="Home" asp-action="Index" title="Manage">Hello @User.Identity.Name! (Manager)</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link ">
                                <strong style="color:#922B21">
                                    <i class="fa fa-sign-out"></i> <span style="color:#D4AC0D">Logout</span>
                                </strong>
                            </button>
                        </form>
                    </li>
                }
        @if (!SignInManager.IsSignedIn(User))
        {
            @*<li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
               <i class="fa fa-user-plus"></i> Register</a>
            </li>*@
            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Login">
                  
                    <strong style="color:#922B21">
                        <i class="fa fa-sign-in"></i> <span style="color:#D4AC0D">LogIn</span>
                        </strong>
                </a>
            </li>
        }
        
    </ul>